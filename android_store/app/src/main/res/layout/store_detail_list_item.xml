<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/store_detail_item_imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/store_detail_item_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        tools:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/store_detail_item_imageView"
        app:layout_constraintTop_toTopOf="@+id/store_detail_item_imageView" />

    <TextView
        android:id="@+id/store_detail_item_price_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/store_detail_item_title_textView"
        app:layout_constraintTop_toBottomOf="@+id/store_detail_item_title_textView" />

    <TextView
        android:id="@+id/store_detail_item_edit_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_btn"
        android:padding="4dp"
        android:text="@string/menu_edit"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/store_detail_item_price_textView"
        app:layout_constraintTop_toBottomOf="@+id/store_detail_item_price_textView"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/store_detail_item_delete_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_btn"
        android:padding="4dp"
        android:text="@string/menu_delete"
        android:textSize="12sp"
        android:layout_marginLeft="4dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/store_detail_item_edit_textView"
        app:layout_constraintTop_toTopOf="@+id/store_detail_item_edit_textView"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>